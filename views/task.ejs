<%- include("partials/heade") -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.title %></h2>
      <h3>Added by: <%= post.user %></h3>
      <img class="img-fluid" src="<%= post.image %>" alt="task image" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likeTask/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-thumb" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= post.likes %></h3>
        <% if(post.user == user.id) { %>
        <form
          action="/post/deleteTask/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer") -%>
